// Write a function that takes an integer number as an input and check if all the digits in a given number are the same or not.
// Print on the console true if all numbers are same and false if not. On the next line print the sum of all digits.
// The input comes as an integer number.
// The output should be printed on the console.


function sameNumbers(input){
    let numebr = String(input);
    let isSame=true;
    let first=Number(numebr[0]);
    let sum =Number(first);
    for (let i = 1; i < numebr.length; i++) {
        if(first!=numebr[i]){
            isSame = false;
        }
        sum+=Number(numebr[i]);
    }

    console.log(isSame+"\n"+sum);
}
sameNumbers(2222222);
sameNumbers(1234)
